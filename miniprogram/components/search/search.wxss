.container {
  display: flex;
  align-items: center;
}

.search-wrapper {
  flex: 1;
  position: relative;
  margin: 0 30rpx 0 20rpx;
}

.bar {
  height: 68rpx;
  font-size: 30rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding: 0 90rpx 0 60rpx; 
}

.search {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  width: auto!important;
}

.find {
  position: absolute;
  top: 50%;
  left: 34rpx;
  transform: translate(-50%, -50%);
  color: #9f9f9f;
  font-size: 38rpx;
}

.clear {
  z-index: 100;
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translate(-50%, -50%);
  color: #9f9f9f;
  font-size: 38rpx;
}

.in-bar {
  color: #999
}