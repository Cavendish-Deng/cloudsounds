.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  position: relative;
  flex: auto;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  margin-right: 20rpx;
}

.search {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
}

button:not([size='mini']) {
  width: auto;
}

.find {
  position: absolute;
  top: 50%;
  left: 34rpx;
  transform: translate(-50%, -50%);
  color: #9f9f9f;
}

.clear {
  z-index: 100;
  position: absolute;
  top: 50%;
  left: 65%;
  transform: translate(-50%, -50%);
  color: #9f9f9f;
  font-size: 46rpx;
}

.in-bar {
  color: #999
}