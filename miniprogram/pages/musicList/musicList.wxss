.detail-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-img {
  margin-right: 24rpx;
  border-radius: 6rpx;
  width: 280rpx;
  height: 280rpx;
  margin-right: 20rpx;
}

.detail-img image {
  width: 280rpx;
  height: 280rpx;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.description {
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
}
